{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}

	<div class="container">
		<div class="row">
			<div class="col mb-5">
				<img src="{{ results.homeTeam.team.logo }}"/>
				<p>{{ results.homeTeam.team.name }}</p>
			</div>
			<div class="col mb-5">
				<p class="score"><span>{{ results.score.home }}</span> - <span>{{ results.score.away }}</span></p>
               
			</div>
			<div class="col mb-5">
				<img src="{{ results.awayTeam.team.logo }}"/>
			</div>
            </div>
             <h4 class="mb-5">Summary</h4>
            <div class="row justify-content-start">
				<div class="col align-items-start">
					{% for event in results.events%}
						<p>
							{% if event.team.id == results.teams.home.id %}
                                 <span class="red">{{event.time.elapsed}}"</span> 
                                {% if event.type == 'Goal' %}
                                    {% if event.detail == 'Penalty' %}
                                    (P)
                                    {% endif %}
                                    <img src="{{asset('build/images/soccer-ball-retina.png')}}"/>
                                     <span class="red">{{event.player.name}}</span> 
                                {% elseif event.type == 'Card' %}
                                     {% if event.detail == 'Yellow Card' %}
                                     <img src="{{asset('build/images/yellow.png')}}" width="20px"/>
                                     {% else %}
                                    <img src="{{asset('build/images/red.jpg')}}" width="20px"/>
                                      {% endif %}
                                       <span class="red">{{event.player.name}}</span>
                                 {% elseif event.type == 'subst' %}
                                    <img src="{{asset('build/images/subs.png')}}" width="30px"/>
                                     <span class="red">{{event.player.name}}</span> 
                                 {% endif %}
							{% endif %}
						</p>
					{% endfor %}
				</div>
                <div class="col"></div>
				<div class="col">
					{% for event in results.events%}
						<p>
							{% if event.team.id == results.teams.away.id %}
                                 <span class="red">{{event.time.elapsed}}"</span> 
                                {% if event.type == 'Goal' %}
                                    {% if event.detail == 'Penalty' %}
                                    (P)
                                    {% endif %}
                                    <img src="{{asset('build/images/soccer-ball-retina.png')}}"/>
                                     <span class="red">{{event.player.name}}</span> 
                                {% elseif event.type == 'Card' %}
                                     {% if event.detail == 'Yellow Card' %}
                                     <img src="{{asset('build/images/yellow.png')}}" width="20px"/>
                                     {% else %}
                                    <img src="{{asset('build/images/red.jpg')}}" width="20px"/>
                                      {% endif %}
                                       <span class="red">{{event.player.name}}</span>
                                 {% elseif event.type == 'subst' %}
                                    <img src="{{asset('build/images/subs.png')}}" width="30px"/>
                                     <span class="red">{{event.player.name}}</span> 
                                 {% endif %}
							{% endif %}
						</p>
					{% endfor %}
				</div>
            <h4 class="mb-5">Team Stats</h4>

			<div class="row">
				<div class="col">
					{% for result in results.homeTeam.statistics%}
						<p>
							{% if result.value == null %}
								0
							{% else %}
								{{ result.value }}
							{% endif %}
						</p>
					{% endfor %}
				</div>
				<div class="col">
					{% for result in results.homeTeam.statistics%}

						<p>{{ result.type }}
						</p>

					{% endfor %}
				</div>
				<div class="col">
					{% for result in results.awayTeam.statistics%}
						<p>
							{% if result.value == null %}
								0
							{% else %}
								{{ result.value }}
							{% endif %}
						</p>
					{% endfor %}
				</div>
			</div>
		{% endblock %}
		{% block javascripts %}
			{{ parent() }}
		{% endblock %}
